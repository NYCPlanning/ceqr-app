<div class="ui grid container site">
  <div class="ui sixteen wide column">
    <div class="row">
      <table class="ui very basic celled table">
        <thead>
          <tr>
            <th class="six wide">
              Project Name
            </th>
            <th class="five wide">
              Last Updated
            </th>
            <th class="two wide"></th>
          </tr>
        </thead>
        <tbody>
          {{#if this.model}}
            {{#each this.model as |project|}}
              <tr class="project-row">
                <td>
                  <LinkTo @route="project.show" @model={{project.id}} class="project-name" data-test-project={{project.id}}>
                    {{project.name}}
                  </LinkTo>
                  {{#if project.ceqrNumber}}
                    ({{project.ceqrNumber}})
                  {{/if}}
                </td>
                <td>
                  {{#if project.updated_at}}
                    {{moment-format project.updated_at "MM/DD/YYYY"}}
                    <span class="byline">
                      by
                      {{project.updated_by}}
                    </span>
                  {{/if}}
                </td>
                <td class="actions">
                  {{#if project.viewOnly}}
                    (summary only)
                  {{else}}
                    <LinkTo
                      @route="project.show.edit"
                      @model={{project.id}}
                      class="ui compact small labeled primary icon button"
                    >
                      <i class="edit icon"></i>Edit
                    </LinkTo>
                    <button
                      {{!-- Cannot use fn because exists on route and not component --}}
                      class="ui compact small negative icon button" type="button" {{action "deleteModal" project.id}}
                    >
                      <i class="trash icon"></i>
                    </button>
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="4">
                You have no projects assigned to you. Create a
                <LinkTo
                @route="project.new">
                  new project
                </LinkTo>
                .
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
    <div class="row">
      <LinkTo
        @route="project.new"
        class="ui green button"
        data-test-new-project={{true}}
      >
        New Project
      </LinkTo>
    </div>
  </div>
</div>
<div class="ui mini modal">
  <div class="header">
    Delete Project?
  </div>
  <div class="content">
    <p>
      Are you sure you want to delete this project? This cannot be undone.
    </p>
  </div>
  <div class="actions">
    <div class="ui positive button">
      Cancel
    </div>
    <div
      class="ui negative right labeled icon button"
      {{!-- Cannot use fn because exists on route and not component --}}
      {{action "deleteProject"}}
      role="button"
    >
      Delete
      <i class="trash icon"></i>
    </div>
  </div>
</div>