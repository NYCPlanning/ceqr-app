<div class="row">
  <div class="sixteen wide column">
    <Analysis::DataPackageSelector
      @dataPackageType="nyc_acs"
      @title="Journey to Work"
      @currentPackage={{analysis.nycAcsDataPackage}}
      @updateDataPackageAction={{analysis.updateDataPackage}}
    />
    <Analysis::DataPackageSelector
      @dataPackageType="ctpp"
      @title="Reverse Journey to Work"
      @currentPackage={{analysis.ctppDataPackage}}
      @updateDataPackageAction={{analysis.updateDataPackage}}
    />
  </div>
</div>

<div class="row">
  <div class="sixteen wide column">
    <Transportation::DataSourceToggle
      @switch={{this.isRJTW}}
      @falseLabel="Journey To Work"
      @trueLabel="Reverse Journey To Work"
    />
    <Transportation::CensusTractsTable
      @isRJTW={{this.isRJTW}}
      @selectedCensusTractIds={{this.selectedCensusTractIds}}
      @acsModalSplits={{analysis.acsModalSplits}}
      @ctppModalSplits={{analysis.ctppModalSplits}}
      @modeLookup={{this.modeLookup}}
      @commuterModes={{this.commuterModes}}
    />
  </div>
</div>
