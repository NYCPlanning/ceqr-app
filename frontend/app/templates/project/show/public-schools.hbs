{{! Shares the controller context from 'project' }}
{{page-title "[Public Schools]" prepend=false}}
<div class="row">
  <div class="eight wide column" style="z-index: 1">
    <PublicSchools::VersionSelector
      @analysis={{this.model.publicSchoolsAnalysis}}
      @project={{this.model.project}}
      @availablePackages={{this.model.availablePackages}}
    />
  </div>
  <div class="eight wide column right aligned">
    <div class="ui medium label">
      Schools Multipliers:
      <div class="detail">
        {{humanize this.model.publicSchoolsAnalysis.multiplierVersion}}
      </div>
    </div>
  </div>
</div>

{{#if this.showAnalysisSteps}}
  <div class="row">
    <div class="sixteen wide column">
      <PublicSchools::AnalysisSteps @project={{this.model.project}} />
    </div>

    <div
      class="ui inverted dimmer
        {{if this.project-orchestrator.projectTask.isRunning "active"}}"
    >
      <div class="ui text loader">
        Loading
      </div>
    </div>
  </div>
{{/if}}

{{#if (and this.showMap this.project-orchestrator.projectTask.isIdle)}}
  <div class="row">
    <div class="sixteen wide column">
      {{#with this.model.publicSchoolsAnalysis.subdistrictsGeojson.subdistrictsGeojson as |subdistricts|}}
          <PublicSchools::ProjectMap
            @project={{this.model.project}}
            @analysis={{this.model.publicSchoolsAnalysis}}
            @subdistrictsGeojson={{subdistricts}}
          />
      {{/with}}
      {{#unless this.model.publicSchoolsAnalysis.subdistrictsGeojson.subdistrictsGeojson}}
          <div style="height: 100px; background-color: #CCE2FF">
            <div class="ui active inverted dimmer">
              <div class="ui text loader">Loading map of subdistricts... Please wait... </div>
            </div>
          </div>
      {{/unless}}
    </div>
  </div>
{{/if}}

{{#if this.project-orchestrator.projectTask.isIdle}}
  {{outlet}}
{{/if}}