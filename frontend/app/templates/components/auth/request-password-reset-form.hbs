<div class="ui grid container">
  <div class="six wide centered column">
    <h2 class="ui blue header">
      <div class="content">
        Request a password reset
      </div>
    </h2>
    <div class="ui segment">
      <form
        class="ui large form {{if this.error "error"}}"
        {{!-- forms seem to blow up when using "on fn" --}}
        {{!-- template-lint-disable no-action --}}
        {{action "requestResetPassword" this.email on="submit"}}
      >
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <Input aria-label="email" @type="email" name="email" @value={{this.email}} placeholder="Email"/>
          </div>
        </div>
        <div class="ui left error message">
          <div class="header">
            Error
          </div>
          <p>
            {{this.error.message}}
          </p>
        </div>
        <button type="submit" class="ui fluid large primary submit button">
          Request password reset
        </button>
      </form>
    </div>
  </div>
</div>