<div class="ui top attached large header">
  <i class="map icon"></i>
  Project Area
</div>
<div class="ui bottom attached segment">
  <Project::ProjectAreaSelector @project={{this.project}} @mapplutoVersions={{this.mapplutoVersions}} />
</div>
<div class="ui top attached large header">
  <i class="home icon"></i>
  Residential Land Use
</div>
<table class="ui bottom attached celled table">
  <tbody>
    <tr>
      <td>
        <h4 class="ui image header">
          <div class="content">
            Total Units
            <div class="sub header">
              Number of incremental units generated by project
            </div>
          </div>
        </h4>
      </td>
      <td class="math--bottom positive">
        <div class="ui input transparent edit-cell">
          <Input
            id="total"
            min={{0}}
            max={{9999}}
            @type="number"
            @value={{this.project.totalUnits}}
            placeholder={{0}}
            data-test-housing-units-total={{true}}
          />
        </div>
      </td>
    </tr>
    <tr colspan="2">
      <td></td>
    </tr>
    <tr>
      <td>
        <h5 class="ui image header">
          <div class="content">
            Senior Units
            <div class="sub header">
              Of the
              {{this.project.totalUnits}}
              Total Units, number of those exclusively for seniors or HPD supportive housing facilities for special needs populations
            </div>
          </div>
        </h5>
      </td>
      <td class="positive">
        <div class="ui input transparent edit-cell">
          <Input
            id="senior"
            min={{0}}
            max={{9999}}
            @type="number"
            @value={{this.project.seniorUnits}}
            placeholder={{0}}
            data-test-housing-units-senior={{true}}
          /> 
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <h5>
          Total Units for Public Schools analysis
        </h5>
      </td>
      <td>
        <strong>
          {{this.unitsForPublicSchools}}
        </strong>
      </td>
    </tr>
    <tr colspan="2">
      <td></td>
    </tr>
    <tr>
      <td>
        <h5 class="ui image header">
          <div class="content">
            Affordable Units
            <div class="sub header">
              Of the
              {{this.project.totalUnits}}
              Total Units, number of those at or below 80% AMI
            </div>
          </div>
        </h5>
      </td>
      <td class="positive">
        <div class="ui input transparent edit-cell">
          <Input
            id="affordable"
            min={{0}}
            max={{9999}}
            @type="number"
            @value={{this.project.affordableUnits}}
            placeholder={{0}}
            data-test-housing-units-affordable={{true}}
          />
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <h5>
          Total Units for Child Care Center analysis
        </h5>
      </td>
      <td>
        <strong>
          {{this.unitsForChildCare}}
        </strong>
      </td>
    </tr>
  </tbody>
</table>
{{! Commercial Land Use }}
<div class="ui top attached large header">
  <i class="briefcase icon"></i>
  Commercial Land Use
</div>
<table class="ui bottom attached celled table">
  <tbody>
    {{#if this.commercialUseTypes}}
      <tr>
        <td class="seven wide">
          <UiDropdown
            @selected={{this.commercialLandUse.type}}
            @onChange={{action (mut this.commercialLandUse.type)}}
            data-test-commercial-use="dropdown"
          >
            <div class="default text">
              Select land use type to add
            </div>
            <i class="dropdown icon"></i>
            <div class="menu">
              {{#each this.commercialUseTypes as |t|}}
                <div
                  class="item"
                  data-value={{t.type}}
                  data-test-commercial-use={{t.name}}
                >
                  {{t.name}}
                </div>
              {{/each}}
            </div>
          </UiDropdown>
        </td>
        <td class="four wide positive">
          <div class="ui input transparent edit-cell">
            <Input
              aria-label="commercial land use gross square feet"
              @type="number"
              min={{0}}
              @value={{this.commercialLandUse.grossSqFt}}
              placeholder={{0}}
              data-test-commercial-use="sq-ft"
            /> 
            <strong>
              sq. ft.
            </strong>
          </div>
        </td>
        <td class="one wide">
          <button
            class="ui button blue centered"
            onClick={{action "addLandUse" this.commercialLandUse "commercialLandUse"
            }}
            data-test-commercial-use="add" type="button"
          >
            Add
          </button>
        </td>
      </tr>
    {{/if}}
    {{#each this.project.commercialLandUse as |lu|}}
      <tr data-test-commercial-use={{lu.name}}>
        <td>
          {{lu.name}}
        </td>
        <td>
          {{lu.grossSqFt}}
          sq. ft.
        </td>
        <td>
          <button
            class="ui compact small negative icon button"
            data-test-commercial-use="delete" type="button" {{action "removeLandUse" lu.type "commercialLandUse"}}
          >
            <i class="trash icon"></i>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <th colspan="2">
      <h4 class="ui image header">
        <div class="content">
          Total Commercial Square Footage
        </div>
      </h4>
    </th>
    <th>
      <h4>
        {{this.totalCommercialSqFt}}
      </h4>
    </th>
  </tfoot>
</table>
