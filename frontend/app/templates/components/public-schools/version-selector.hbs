
  <div class="ui medium label">
    {{#if analysis.newDataAvailable}}
      <UiPopup
        @tagName="i"
        class="exclamation orange circle icon"
        @content="Update available"
        />
    {{/if}}
    Data Package:
    <div class="detail">
      {{#if project.viewOnly}}
        {{humanize analysis.dataVersion}}
      {{else}}
        <UiDropdown
          @selected={{analysis.dataVersion}}
          class="public-schools-data-dropdown"
        >
          <div class="text"></div>
          <i class="dropdown icon"></i>
          <div class="menu">
            {{#each availablePackages as |package|}}
              <div
                data-value={{package.version}}
                class="item"
                onClick={{action "changeDataPackage" package}}
              >
                {{package.name}}
              </div>
            {{/each}}
          </div>
        </UiDropdown>
      {{/if}}
    </div>
  </div>

