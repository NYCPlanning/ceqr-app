<div class="ui labels">
  {{#if project.viewOnly}}
    <div class="ui medium label">
      {{#if dataOutdated}}
        {{ui-popup 
          tagName="i"
          class="exclamation orange circle icon"
          content="Update available"
        }}
      {{/if}}
      
      Data Package: 
      <div class="detail">{{humanize analysis.dataVersion}}</div>
    </div>
 
  {{else}}
    <div class="ui medium label">
      {{#if dataOutdated}}
        {{ui-popup 
          tagName="i"
          class="exclamation orange circle icon"
          content="Update available"
        }}
      {{/if}}
      
      Data Package: 
      
      <div class="detail">
        {{#ui-dropdown 
          selected=analysis.dataVersion
          class="public-schools-data-dropdown"
        }}
          <div class="text"></div>
          <i class="dropdown icon"></i>
          <div class="menu">
            <div 
              data-value="november-2017"
              class="item"
              onClick={{action "changeDataVersion" "november-2017"}}
            >
              November 2017 (old multipliers)
            </div>
            <div 
              data-value="november-2018"
              class="item"
              onClick={{action "changeDataVersion" "november-2018"}}
            >
              November 2018
            </div>
            <div
              data-value="november-2018-q2"
              class="item"
              onClick={{action "changeDataVersion" "november-2018-q2"}}
            >
              November 2018 (with April 2019 SCA Capital Plan)
            </div>
          </div>
        {{/ui-dropdown}}
      </div>
    </div>
  {{/if}}
  <div class="ui medium label">
    Schools Multipliers:
    <div class="detail">{{humanize analysis.multiplierVersion}}</div>
  </div>
</div>
