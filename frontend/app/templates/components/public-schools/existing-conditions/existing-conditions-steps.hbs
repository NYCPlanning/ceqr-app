<div class="ui pointing menu">
  <LinkTo
    @route="project.show.public-schools.existing-conditions.schools"
    @model={{this.project.id}}
    class="item"
  >
    Public Schools Serving Study Area
  </LinkTo>
  <div class="right menu">
    <LinkTo
      @route="project.show.public-schools.existing-conditions.study-area"
      @model={{this.project.id}}
      class="item"
    >
      Study Area
      {{#if this.displayWarning}}
        <div class="ui basic label orange">
          <i class="attention orange icon" style="margin: 0"></i>  
        </div>
      {{/if}}
    </LinkTo>
    <LinkTo
      @route="project.show.public-schools.existing-conditions.new-schools"
      @model={{this.project.id}}
      class="item"
    > 
      Newly Opened Schools
      <div
        class="ui label {{if (gt this.analysis.newlyOpenedSchools.length 0) "orange" "green"}}"
      >
        {{this.analysis.newlyOpenedSchools.length}}
      </div>
    </LinkTo>
  </div>
</div>