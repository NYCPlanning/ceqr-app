<div class="transpo-factors-bar">
  <div class="ui grid">
    <div class="eight wide column">
      <div class="ui two item menu">
        {{#each this.model.transportationPlanningFactors as |factor|}}
          {{#link-to
            this.factorLink
            factor.id
            class="item"
          }}
            <span data-test-land-use-tab={{factor.landUse}}>{{humanize factor.landUse}}</span>
            <div class="ui horizontal label">
              {{pluralize (format-number factor.units) factor.unitName}}
            </div>
          {{/link-to}}
        {{/each}}
      </div>
    </div>

    {{#if (eq this.tdfSection "planning-factors")}}
      <div class="four wide column middle aligned">
        <div class="fluid ui positive button" data-test-button="saveFactors" onClick={{action this.saveFactors}}>
          Save
        </div>
      </div>
      <div class="four wide column middle aligned">
        {{#link-to
          "project.show.transportation.tdf.trip-results"
          this.model.project.id
          class="fluid ui primary button"
        }}
          Next
        {{/link-to}}
      </div>
    {{else}}
      <div class="four wide column middle aligned">
        {{#link-to
          "project.show"
          this.model.project.id
          class="fluid ui positive button"
        }}
        Save & Return to Dashboard
        {{/link-to}}
      </div>
    {{/if}}
  </div>
</div>
