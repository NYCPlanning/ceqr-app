<div class="sixteen wide column">
  <h3 class="ui header" style="margin-bottom: 10px">Vehicle Occupancy</h3>
</div>

<div class="eight wide column">
  <table class="ui celled table">
    <thead>
      <tr>
        <th class="three wide">Mode</th>
        <th class="three wide">All Periods</th>
      </tr>
    </thead>
    <tbody class="ui form">
      <tr>
        <td><i class="car icon"></i> Auto (Car, Truck, Van)</td>
        <td>
          {{#if factor.modeSplitsFromUser}}
            {{input type="number" step=".01" min="0" value=editData.auto.allPeriods}}
          {{else}}
            {{viewData.auto.allPeriods}}
          {{/if}}
        </td>
      </tr>
      <tr>
        <td><i class="taxi icon"></i> Taxi</td>
        <td>{{input type="number" step=".01" min="0" value=editData.taxi.allPeriods}}</td>
      </tr>
      {{#if factor.modeSplitsFromUser}}
        <tr>
          <td colspan="3">
            <div class="ui blue button right floated" onClick={{action saveFactor}}>
              Save
            </div>
          </td>
        </tr>
      {{/if}}
      <tr>
        <td colspan="3">
          <Transportation::Tdf::TableNote 
            @tableName="vehicleOccupancy"
            @factor={{factor}}
          />
        </td>
      </tr>
    </tbody>
  </table>
</div>
