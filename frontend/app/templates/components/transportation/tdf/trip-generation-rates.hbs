<div class="sixteen wide column">
  <h3 class="ui header" style="margin-bottom: 10px">Trip Generation Rates</h3>
</div>

<div class="eight wide column">
  <table class="ui celled table">
    <thead>
      <tr>
        <th class="eight wide">Day</th>
        <th class="eight wide" data-test-total-per={{this.factor.landUse}}>Total (Per {{this.factor.tripGenRatePerUnit}} {{this.factor.unitName}})</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td data-label="Day">{{this.data.weekday.label}}</td>
        <td data-label="Total">{{this.data.weekday.rate}}</td>
      </tr>
      <tr>
        <td data-label="Day">{{this.data.saturday.label}}</td>
        <td data-label="Total">{{this.data.saturday.rate}}</td>
      </tr>
      <tr>
        <td colspan="2">
          <Transportation::Tdf::TableNote 
            @tableName="tripGenerationRates"
            @factor={{this.factor}}
          />
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="eight wide column">
</div>
