{{! binds a map event with an action using mapbox-gl's on method }}
<MapboxGlOn
  @event="mousemove"
  @action={{this.handleMouseMove}}
  @eventSource={{this.map.instance}}
 />

<MapboxGlOn
  @event="mouseout"
  @action={{this.handleMouseLeave}}
  @eventSource={{this.map.instance}}
 />

{{yield this.mousePosition}}