<div class="ui top attached clearing segment">
  {{#link-to "project.show" project.id class="ui left floated project title"}}
    <h1>{{project.name}}</h1>
  {{/link-to}}

  <div class="ui right floated horizontal list">
    <div class="item">
      {{#if project.ceqrNumber}}
        <div class="ui label large">
          CEQR #
          <div class="detail">
            {{project.ceqrNumber}}
          </div>
        </div> 
      {{/if}}
    </div>

    <div class="item">
      <div class="ui label large">
        {{project.borough}}
      </div>
    </div>

    <div class="item">
      <div
        class="ui label large"
        data-tooltip="Build Year"
        data-position="bottom center"
        data-inverted=""
      >
        <i class="calendar alternate icon"></i>{{project.buildYear}}
      </div> 
    </div>

    {{#unless project.viewOnly}}
      <div class="item">
        {{#link-to
          "project.show.edit"
          project.id
          class="ui primary compact basic icon button"
        }}
          <i class="edit icon"></i>
          Edit
        {{/link-to}}
      </div>
    {{/unless}}
  </div>
</div>

<div class="ui bottom attached clearing segment">
  {{#ui-dropdown 
    selected=currentChapter
    class="chapter-dropdown"
  }}
    <div class="default text">Select Chapter</div>
    <i class="dropdown icon"></i>
    <div class="menu">
      <div 
        data-value="public-schools"
        class="item"
        onClick={{action "gotoChapter" "public-schools"}}
      >
        <h3>
          <i class="building icon"></i>
          Public Schools
        </h3>
      </div>
      {{!-- <div data-value="transportation" class="item">
        <h3>
          <i class="subway icon"></i>
          Transportation
        </h3>
      </div> --}}
    </div>
  {{/ui-dropdown}}

  {{#if (eq currentChapter "public-schools")}}
    <div class="ui right floated buttons">
      {{#unless project.viewOnly}}
        {{#link-to
          "project.show.public-schools"
          project.id
          class=(if onSummary "ui right basic teal compact icon button" "ui right teal compact icon button")
        }}
          <i class="calculator icon"></i>
          Workbook
        {{/link-to}}
      {{/unless}}

      {{#link-to 
        "project.show.public-schools.summary"
        project.id
        class=(if onSummary "ui right teal compact icon button" "ui right basic teal compact icon button")
      }}
        <i class="columns icon"></i>
        Summary
      {{/link-to}}
    </div>
  {{/if}}
</div>