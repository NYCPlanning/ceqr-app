<div class="ui grid container">
  <div class="six wide centered column">
    <h2 class="ui blue header">
      <div class="content">
        Create an account
      </div>
    </h2>
    <div class="ui segment">
      <form
        class="ui large form {{if this.error "error"}}"
        {{action "createUser" this.user on="submit"}}
      >
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <Input
              aria-label="email"
              @type="text"
              name="email"
              @value={{this.user.email}}
              placeholder="Email"
            /> 
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <Input
              aria-label="password"
              @type="password"
              name="password"
              @value={{this.user.password}}
              placeholder="Password"
            /> 
          </div>
        </div>
        <div class="ui left error message">
          <div class="header">
            Error
          </div>
          <p>
            {{this.error.message}}
          </p>
        </div>
        <button type="submit" class="ui fluid large primary submit button">
          Create Account
        </button>
      </form>
    </div>
    <div class="ui message">
      Already have an account?
      <LinkTo @route="login">
        Log In
      </LinkTo>
    </div>
  </div>
</div>