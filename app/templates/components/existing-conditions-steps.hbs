<div class="ui pointing menu">
  {{#link-to 
    "project.show.schools-capacity.existing-conditions.schools"
    project.id
    class="item"
  }}
    Public Schools Serving Study Area
  {{/link-to}}

  <div class="right menu">
    {{#if 
      (or project.esSchoolChoice project.isSchoolChoice (gt project.subdistrictsFromDb.length 1))
    }}
      {{#link-to
        "project.show.schools-capacity.existing-conditions.study-area"
        project.id
        class="item"
      }}
        Study Area 
        <div class="ui basic label orange">
          <i class="attention orange icon" style="margin: 0"></i>
        </div>
      {{/link-to}}
    {{/if}}

    {{#link-to
      "project.show.schools-capacity.existing-conditions.new-schools"
      project.id
      class="item"
    }}
      Newly Opened Schools
      <div class="ui label {{if (gt project.lcgms.length 0) "orange" "green"}}">{{project.lcgms.length}}</div>
    {{/link-to}}
  </div>
</div>
