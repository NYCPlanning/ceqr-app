{{!-- 
Get Mona to include correct grades served and citywide & alternative schools
 --}}

<div class="ui basic segment">
  <h4>Primary Schools</h4>
  <table class="ui celled sortable table">
    <thead>
      <tr>
        <th>School Name</th>
        <th>Address</th>
        <th>Grades<br />Served</th>
        <th>Enrollment</th>
        <th>Target<br />Capacity</th>
        <th>Available<br />Seats</th>
        <th>Utilization (%)</th>
      </tr>
    </thead>

    {{#each (await analysis.psBuildings) as |sd|}}
      <thead>
        <th colspan="7">District {{sd.district}} - Subdistrict {{sd.subdistrict}}</th>
      </thead>

      <tbody>
        {{#each sd.buildings as |b|}}
          <tr>
            <td>{{b.name}}</td>
            <td>{{b.address}}</td>
            <td>{{b.grades}}</td>
            <td>{{b.enroll}}</td>
            <td>{{if b.capacity b.capacity "N/A"}}</td>
            <td>{{b.seats}}</td>
            <td>{{if b.utilization b.utilization "N/A"}}</td>
          </tr>
        {{/each}}
      </tbody>

      <tfoot>
        <tr>
          <th colspan="3"></th>
          <th>{{sd.enrollmentTotal}}</th>
          <th>{{sd.capacityTotal}}</th>
          <th>{{sd.seatsTotal}}</th>
          <th>{{sd.utilization}}</th>
        </tr>
      </tfoot>
    {{/each}}
  </table>
</div>

