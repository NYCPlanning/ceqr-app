<table class="ui top attached table">
  <thead>
    <tr>
      <th></th>
      <th colspan="3">
        Estimated Public School Students Generated<br>by New Residential Units {{ui-popup 
          tagName="i"
          class="no-size book icon"
          content="Table 6-1a: Estimated Public School Students Generated by New Residential Units"
          style="font-size: 1em;"
        }}
      </th>
      <th colspan="2">
        Minimum Number of Residential Units that<br>Trigger Detailed Analyses {{ui-popup 
          tagName="i"
          class="no-size book icon"
          content="Table 6-1: Community Facility Thresholds for Detailed Analyses"
          style="font-size: 1em;"
        }}
      </th>
    </tr>
    
    <tr>
      <th></th>
      <th>Elementary<br>level per unit<br>(Age 4-10)</th>
      <th>Middle School<br>level per unit<br>(Age 11-13)</th>
      <th>High School<br>level per unit<br>(Age 14-17)</th>
      <th>Primary/<br>Intermediate</th>
      <th>High School</th>
    </tr>
  </thead>
  <tbody>
    {{#each project.manual.boroughs as |boro|}}
      <tr class="{{boro.name}} {{if (eq boro.name project.borough) "active"}}">
        <td>{{boro.name}}</td>
        <td>{{boro.ps}}</td>
        <td>{{boro.is}}</td>
        <td>{{boro.hs}}</td>
        <td>{{boro.psisThreshold}}</td>
        <td>{{boro.hsThreshold}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div class="ui attached bottom icon message">
  <i class="database icon"></i>
  <div class="content">
    <div class="header">
      <a
        target="_blank"
        rel="noopener"
        href="http://www.nycsca.org/Community/Capital-Plan-Reports-Data#Housing-Projections-70"
      >
        SCA Projected Public School Ratio [2008] <i class="external alternate icon"></i>
      </a>
    </div>
    <p>
      Multipliers defined by the Schools Construction Authority
    </p>
  </div>
</div>