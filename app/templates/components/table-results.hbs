<h3 class="ui header attached top">
  Estimated Results
</h3>

<table class="ui attached bottom celled table">
  <thead>
    <tr>
      <th>School Level</th>
      <th>Utilization (%)</th>
      <th>Change in Utilization (%)</th>
      <th>Triggers a Significant Adverse Impact</th>
    </tr>
  </thead>

  {{#if psTable}}
    <tbody>
      <tr>
        <td>Primary Schools</td>
        {{#td-hover payload=(hash name='utilizationWithAction' level='ps')}}{{percentage psTable.utilizationWithActionTotal}}{{/td-hover}}
        {{#td-hover payload=(hash name='utilizationChange' level='ps')}}{{percentage psTable.utilizationChangeTotal}}{{/td-hover}}
        {{#if psTable.impact}}
          <td class="negative"><strong>Likely</strong></td>
        {{else}}
          <td class="positive">No</td>
        {{/if}}
      </tr>
    </tbody>
  {{/if}}

  {{#if isTable}}
    <tbody>
      <tr>
        <td>Intermediate Schools</td>
        {{#td-hover payload=(hash name='utilizationWithAction' level='is')}}{{percentage isTable.utilizationWithActionTotal}}{{/td-hover}}
        {{#td-hover payload=(hash name='utilizationChange' level='is')}}{{percentage isTable.utilizationChangeTotal}}{{/td-hover}}
        {{#if isTable.impact}}
          <td class="negative"><strong>Likely</strong></td>
        {{else}}
          <td class="positive">No</td>
        {{/if}}
      </tr>
    </tbody>
  {{/if}}

  {{#if project.hsAnalysis}}
    <tbody>
      <tr>
        <td>High Schools</td>
        {{#td-hover payload=(hash name='utilizationWithAction' level='hs')}}{{percentage hsTable.utilizationWithActionTotal}}{{/td-hover}}
        {{#td-hover payload=(hash name='utilizationChange' level='hs')}}{{percentage hsTable.utilizationChangeTotal}}{{/td-hover}}
        {{#if hsTable.impact}}
          <td class="negative"><strong>Likely</strong></td>
        {{else}}
          <td class="positive">No</td>
        {{/if}}
      </tr>
    </tbody>
  {{/if}}
</table>