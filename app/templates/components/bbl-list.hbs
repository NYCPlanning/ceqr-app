<div class="ui message">
  <p>
    Select 1 or more BBLs included in the project area.
  </p>
</div>

<div class="ui grid">
  <div class="row">
    <div class="sixteen wide column">
      <div class="ui action input">
        <form class="ui form" {{action "addBbl" bbl on="submit"}}>
          <div class="fields">
            <div class="field">
              <div class="ui action input">
                {{input
                  type="text"
                  name="bbl"
                  value=bbl
                  placeholder="BBL"
                  maxlength=10
                  enter=(action "addBbl")
                }}
                <button type="submit" class="ui primary button">Add</button>
              </div>
            </div>
              
            <div class="field">
              <a
                href="https://zola.planning.nyc.gov"
                target="_blank"
                rel="noopener"
                class="ui button basic"
              >
                Go to ZoLa <i class="external alternate icon"></i>
              </a>
            </div>
          </div>

          <div class="ui error message">
          </div>
        </form>
      </div>
    </div>
  </div>

  {{#if model.bbls}}
    <div class="row">
      <div class="sixteen wide column">
        <div class="ui horizontal list">
          <div class="ui basic large label">{{model.borough}}</div>
          {{#each model.bbls as |bbl|}}
            <div class="item">
              <div class="ui label">
                <a 
                  href="https://zola.planning.nyc.gov/bbl/{{bbl}}"
                  target="_blank"
                  rel="noopener"
                >
                  {{bbl}}
                </a> <i class="close link icon" {{action "removeBbl" bbl}}></i>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}
</div>
