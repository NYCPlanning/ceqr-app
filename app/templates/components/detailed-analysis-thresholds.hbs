<h4>Minimum Number of Residential Units that Trigger Detailed Analysis</h4>
<table class="ui definition table">
  <thead>
    <tr><th></th>
    <th>Elementary/<br />Intermediate</th>
    <th>High School</th>
  </tr></thead>
  <tbody>
    {{#each analysisThreshold as |boro|}}
      <tr class={{boro.name}}>
        {{#if (eq boro.name model.borough)}}
          <td class= "active">{{boro.name}}</td>
          <td class={{if model.esEffect "negative" "positive"}}>
            <i class={{if model.esEffect "icon close" "icon check"}}></i> {{boro.es}}
          </td>
          <td class={{if model.hsEffect "negative" "positive"}}>
            <i class={{if model.hsEffect "icon close" "icon check"}}></i> {{boro.hs}}
          </td>
        {{else}}
          <td>{{boro.name}}</td>
          <td>{{boro.es}}</td>
          <td>{{boro.hs}}</td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>