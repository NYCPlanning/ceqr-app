<div class="ui grid container site">
  <div class="ui fourteen wide centered column">  
    <div class="row">
      <table class="ui very basic celled table">
        <thead>
          <tr>
            <th class="five wide">Project Name</th>
            <th class="five wide">Last Updated</th>
            <th class="two wide"></th>
          </tr>
        </thead>

        <tbody>
          {{#if model}}
            {{#each model as |project|}}
              <tr class="project-row">
                <td>
                  {{#link-to "project.show" project.id class="project-name"}}
                    {{project.name}}
                  {{/link-to}}

                  {{#if project.ceqr_number}}
                    ({{project.ceqr_number}})
                  {{/if}}
                </td>
                <td>
                  {{#if project.updated_at}}
                    {{moment-format project.updated_at "MM/DD/YYYY"}} <span class="byline">by {{project.updated_by}}</span>
                  {{/if}}
                </td>
                <td class="actions">
                  {{#if project.viewOnly}}
                    (summary only)
                  {{else}}
                    {{#link-to 'project.show.edit' project.id class="ui compact small labeled primary icon button"}}
                      <i class="edit icon"></i>
                      Edit
                    {{/link-to}}

                    <button class="ui compact small negative icon button" {{action 'deleteModal' project.id}}>
                      <i class="trash icon"></i>
                    </button>
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan=4>You have no projects assigned to you. Create a {{#link-to "project.new"}}new project{{/link-to}}.</td>
            </tr>
          {{/if}}
        </tbody>

      </table>
    </div>

    <div class="row">
      {{#link-to "project.new" class="ui green button"}}
        New Project
      {{/link-to}}
    </div>

    <div class="row px20">
      {{general-disclaimer-message}}
    </div>
  </div>
</div>

<div class="ui mini modal">
  <div class="header">Delete Project?</div>
  <div class="content">
    <p>Are you sure you want to delete this project? This cannot be undone.</p>
  </div>

  <div class="actions">
    <div class="ui positive button">
      Cancel
    </div>
    <div class="ui negative right labeled icon button" {{action 'deleteProject'}}>
      Delete
      <i class="trash icon"></i>
    </div>
  </div>
</div>