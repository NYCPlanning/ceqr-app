<div class="row">
  <div class="sixteen wide column">
      <div class="ui grey inverted top attached segment">
        <h1>
          {{#link-to "project.show" project.id class="project title"}}
            {{project.name}}
          {{/link-to}}
        </h1>
      </div>
      <div class="ui bottom attached clearing segment">
        {{#if project.ceqr_number}}
          <div class="ui left floated label large">
              CEQR #
              <div class="detail">{{project.ceqr_number}}</div>
          </div> 
        {{/if}}

        <div class="ui left floated label large">
          {{project.borough}}
        </div>
        
        <div class="ui left floated label large" data-tooltip="Build Year" data-position="bottom center" data-inverted="">
          <i class="calendar alternate icon"></i>{{project.buildYear}}
        </div> 

        {{#link-to 'project.show.edit' project.id class="ui right floated primary compact icon button"}}
          <i class="edit icon"></i>
          Edit
        {{/link-to}}
      </div>
  </div>
</div>

{{outlet}}
